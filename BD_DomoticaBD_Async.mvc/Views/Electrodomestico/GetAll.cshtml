@model List<BD_DomoticaBD_Async.mvc.Models.ElectrodomesticoViewModel>
@{
    ViewData["Title"] = "Electrodomesticos";
    var idCasa = ViewBag.IdCasa;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">üîå Electrodom√©sticos</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">No hay electrodom√©sticos en esta casa.</div>
    }
    else
    {
        <table class="table table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Ubicaci√≥n</th>
                    <th>Encendido</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Nombre</td>
                        <td>@e.Tipo</td>
                        <td>@e.Ubicacion</td>
                        <td>
                            <input type="checkbox"
                                class="toggleEncendido"
                                data-id="@e.IdElectrodomestico"
                                @(e.Encendido ? "checked" : "") />
                        </td>

                        <td>
                            <a asp-action="Detalle" asp-route-id="@e.IdElectrodomestico" class="btn btn-sm btn-secondary">Detalle</a>

                            <form asp-action="Delete" method="post" asp-route-id="@e.IdElectrodomestico" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¬øDesea eliminar este electrodom√©stico?')">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @section Scripts
    {
    <script>
        document.querySelectorAll(".toggleEncendido").forEach(chk => {
            chk.addEventListener("change", async () => {
                const id = chk.dataset.id;
                const encendido = chk.checked;

                await fetch("/Electrodomestico/ToggleEncendido", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ idElectrodomestico: parseInt(id), encendido: encendido })
                });

                // Opcional: refrescar consumos o recargar la vista
                location.reload();
            });
        });
    </script>
    }

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="AltaForm" asp-route-idCasa="@idCasa" class="btn btn-success">‚ûï A√±adir</a>

        <form asp-action="DeleteAll" method="post" asp-route-idCasa="@idCasa" onsubmit="return confirm('¬øDesea eliminar todos los electrodom√©sticos de esta casa?');">
            <button type="submit" class="btn btn-outline-danger">üóëÔ∏è Eliminar Todos</button>
        </form>

        <a asp-controller="Casa" asp-action="GetAll" class="btn btn-secondary">üîô Volver a Casas</a>
    </div>
</div>
