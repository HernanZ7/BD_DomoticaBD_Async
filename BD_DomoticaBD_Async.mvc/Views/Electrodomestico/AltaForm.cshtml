@model Biblioteca.Electrodomestico
@{
    ViewData["Title"] = "Añadir Electrodoméstico";
    var idCasa = Model?.IdCasa ?? (ViewBag.IdCasa ?? 0);
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Añadir Electrodoméstico</h2>

    @* Resumen validaciones *@
    <div class="w-50 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <form asp-action="AltaForm" method="post" class="w-50 mx-auto">
        <input type="hidden" asp-for="IdCasa" value="@idCasa" />

        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo</label>
            <input asp-for="Tipo" class="form-control" required />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Ubicación</label>
            <input asp-for="Ubicacion" class="form-control" required />
            <span asp-validation-for="Ubicacion" class="text-danger"></span>
        </div>

        <div class="text-center mt-3">
            <button class="btn btn-success px-4" type="submit">Guardar</button>
            <a asp-action="GetAll" asp-route-idCasa="@idCasa" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
