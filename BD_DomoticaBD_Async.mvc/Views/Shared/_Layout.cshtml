<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BD_DomoticaBD_Async.mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BD_DomoticaBD_Async.mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IntelHome</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Casa
                            </button>
                            <ul class="dropdown-menu dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Casa" asp-action="GetAll">Lista</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Casa" asp-action="AltaForm">Añadir</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuario
                            </button>
                            <ul class="dropdown-menu dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="GetAll">Lista</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="AltaForm">Añadir</a></li>
                            </ul>
                        </li>
                        @* Dentro de BD_DomoticaBD_Async.mvc/Views/Shared/_Layout.cshtml *@
                        @using Microsoft.AspNetCore.Http

                        @{
                            var userId = Context.Session.GetInt32("UserId");
                            var userName = Context.Session.GetString("UserName");
                        }

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <!-- (tu lista de enlaces actual permanece) -->
                            </ul>

                            <ul class="navbar-nav">
                                @if (userId != null)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="accountMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                            @userName
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountMenu">
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Gestionar</a></li>
                                            <li>
                                                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline">
                                                    <button type="submit" class="dropdown-item">Cerrar Sesión</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer  border-top  text-muted">
        <div>
            &copy; 2025 - IntelHome Domotica - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
