@model Biblioteca.Casa
@{
    ViewData["Title"] = "Añadir Casa";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Añadir Casa</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    <form asp-action="AltaForm" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label>Seleccionar casa existente (opcional):</label>
            <select name="IdCasaExistente" class="form-control">
                <option value="">Ninguna (crear nueva)</option>
                @foreach (var c in ViewBag.TodasLasCasas) // Asume pasas lista via ViewBag en controller GET.
                {
                    <option value="@c.IdCasa">@c.Direccion</option>
                }
            </select>
        </div>
        <!-- Resto del form para Dirección si crea nueva -->

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success px-4">Guardar</button>
            <a asp-action="GetAll" class="btn btn-secondary px-4 ms-2">Cancelar</a>
        </div>
    </form>
</div>
