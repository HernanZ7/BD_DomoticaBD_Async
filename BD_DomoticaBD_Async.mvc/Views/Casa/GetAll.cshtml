@model List<Biblioteca.Casa>
@{
    ViewData["Title"] = "Mis Casas";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Mis Casas</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No tenés casas registradas todavía.
        </div>
    }
    else
    {
        <table class="table table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Dirección</th>
                    <th>Consumo Total (kWh)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var casa in Model)
                {
                    <tr>
                        <td>@casa.Direccion</td>
                        <td>@(casa.ConsumoTotal.ToString("0.##"))</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@casa.IdCasa" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('¿Desea eliminar esta casa?')">
                                    Eliminar
                                </button>
                            </form>
                            <a asp-controller="Electrodomestico" asp-action="GetAll" asp-route-idCasa="@casa.IdCasa"
                                class="btn btn-primary btn-sm">
                                Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="AltaForm" class="btn btn-success">Añadir Casa</a>

        @if (Model != null && Model.Any())
        {
            <form asp-action="DeleteAll" method="post">
                <button type="submit" class="btn btn-outline-danger"
                        onclick="return confirm('¿Desea eliminar todas las casas?')">
                    Eliminar Todas
                </button>
            </form>
        }
    </div>
</div>
