@model BD_DomoticaBD_Async.mvc.Models.UsuarioAltaViewModel
@{
    ViewData["Title"] = "Registro";
}

<div class="centrado d-flex justify-content-center align-items-center">
    <form asp-action="Register" method="post" class="formulario">
        <h1>Crear cuenta</h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input class="form-control" asp-for="Nombre" />
        </div>

        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo</label>
            <input class="form-control" asp-for="Correo" />
        </div>

        <div class="mb-3">
            <label asp-for="Contrasenia" class="form-label">Contraseña</label>
            <div class="input-group">
                <input id="registerPassword" class="form-control" asp-for="Contrasenia" type="password" />
                <button type="button" id="toggleRegisterPassword" class="btn btn-outline-secondary">Mostrar</button>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input class="form-control" asp-for="Telefono" />
        </div>

        <button type="submit" class="btn btn-primary">Crear cuenta</button>

        <p class="mt-3">¿Ya tenés una cuenta? 
            <a asp-controller="Account" asp-action="Login">Iniciá sesión</a>
        </p>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const togg = document.getElementById('toggleRegisterPassword');
        const inp = document.getElementById('registerPassword');
        togg.addEventListener('click', () => {
            if (inp.type === 'password') {
                inp.type = 'text';
                togg.textContent = 'Ocultar';
            } else {
                inp.type = 'password';
                togg.textContent = 'Mostrar';
            }
        });
    </script>
}
